// Promises

const recordVideoOne = new Promise((resolve, reject) => {
    resolve('Video 1 Recorded');
});

const recordVideoTwo = new Promise((resolve, reject) => {
    if (true) {
        reject('Video 2 rejected');
    }
    resolve('Video 2 Recorded');
});

const recordVideoThree = new Promise((resolve, reject) => {
    resolve('Video 3 Recorded');
});

Promise.all([recordVideoOne,recordVideoTwo, recordVideoThree]).then(resolvedValue => console.log(resolvedValue));

recordVideoOne.then((resolvedValue) => {
    return recordVideoTwo;
}).then((resolvedValue) => {
    return recordVideoThree;
}).catch((err) => {
    console.log(err);
})